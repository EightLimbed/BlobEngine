#version 430 core

layout(local_size_x = 1, local_size_y = 1, local_size_z = 1) in;

layout(std430, binding = 0) buffer Colors {
    vec4 colorData[];
};

void main() {
    // Fill the SSBO with colors
    for (int i = 0; i < 16; i++) {
        colorData[i] = vec4(float(i) / 16.0, 0.5, 1.0 - float(i) / 16.0, 1.0);
    }
}